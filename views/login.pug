doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", href="./css/login-up.css")
  body
    -var messages = getMessages();
    #main.flat-theme.--main
      .form-container.flat-theme.--container
        #slider.account-action.flat-theme.--account-action
          //- a(href="/create_account")

          .cont-wrapper
            .sign-in-cont.active-acc-cont
              h1 Hey! Welcome back!
              p To keep connected with us please login with your personal info
              button#sign-in.action-btn.flat-theme.--btn.alt-btn
                span Create an Account

            .sign-up-cont
              h1 Hello! Get started!
              p Enter your personal details and start journey with us
              button#sign-up.action-btn.flat-theme.--btn.alt-btn
                span Sign In

          button#switch.action-btn.flat-theme.--btn.alt-btn
            span Create an account.

        if messages.error
          each msg in messages.error
            .indicator
              span.problem= msg

        .form-wrapper.wrapper-inactive

          form#create-account.form-active(data-active="false", action="/create_account", method="POST")
            .form-content-cont
              .input-field-cont
                input#null1.flat-theme.--input.username( type="text", name="username", autocomplete="off", required="required")
                label(for="username")
                  span Username

              .input-field-cont
                input#email.flat-theme.--input.email( type="email", name="email", autocomplete="off", required="required")
                label(for="email")
                  span Email address

              .group-cont
                .input-field-cont
                  input#firstname.flat-theme.--input(type="text", name="firstname", autocomplete="off", required="required")
                  label(for="firstname")
                    span First Name
                .input-field-cont
                  input#lastname.flat-theme.--input(type="text", name="lastname", autocomplete="off", required="required")
                  label(for="lastname")
                    span Last Name
              .group-cont
                .radio-field-cont.flat-theme.--radio-field-cont
                  input#male(type="radio" name="gender" value="male") 
                  label(for="male") 
                    span Male
                
                .radio-field-cont.flat-theme.--radio-field-cont
                  input#female(type="radio" name="gender" value="female") 
                  label(for="female") 
                    span Female

              .input-field-cont
                input#null2.flat-theme.--input.password(type="password", name="password", autocomplete="new-password", required="required")
                label(for="password")
                  span Password

              button.action-btn.flat-theme.--btn(type="submit")
                span Sign Up


        .form-wrapper

          form#sign-in(data-active="true",action="/login", method="POST")
            .form-content-cont
              .input-field-cont
                input#username.flat-theme.--input.username(data-active="true", type="text", name="username", autocomplete="off", required="required")
                label(for="username")
                  span Username or email
              .input-field-cont
                input#password.flat-theme.--input.password(data-active="true", type="password", name="password", autocomplete="new-password")
                label(for="password")
                  span Password
              button.action-btn.flat-theme.--btn(type="submit")
                span Login


    script(src="./js/account-func.js")
    script(src="/js/lowercase.js")
